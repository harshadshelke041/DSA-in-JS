// Find the Second Largest Element — without sorting.

  let num = [2,3,5, 4];          
let max = -Infinity
let secondMax = -Infinity

for(let i=0;i<num.length;i++) {

  if( num[i] > max ) 
  {
    secondMax = max;
    max = num[i]
  } else if(num[i]  > secondMax && num[i] < max ) {
    secondMax = num[i]
  }

  

}

