// Reverse an Array — do it in place using two pointers

let nums = [1,2,3,4,5];

let left = 0;
let right = nums.length-1;

while(left<right) {

  let temp= nums[left];
  nums[left] = nums[right];
  nums[right] = temp

  left++;
  right--;  
}

console.log(nums);

